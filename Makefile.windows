CXXFLAGS = -fPIC -Wall -Wconversion -Werror -Wextra

CXX = g++
OBJECT_FILES = libskein_skein.o

all:	library $(OBJECT_FILES)
	$(CXX) test.cc -o test.exe -L. -lskein -Wl,-rpath,.

libskein_threefish.o: libskein_skein.cc libskein_skein.h
	$(CXX) $(CXXFLAGS) -c -o libskein_skein.o libskein_skein.cc

clean:
	del /f *.o libskein.so
	del /f test.exe

library: $(OBJECT_FILES)
	$(CXX) -shared -o libskein.dll $(OBJECT_FILES)

purge:
	del /f *~*
